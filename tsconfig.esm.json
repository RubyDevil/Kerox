{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "target": "ES6",
    "module": "ES6", // For ES Modules
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
